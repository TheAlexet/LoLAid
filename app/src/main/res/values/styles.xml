<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorControlHighlight">@color/dark_grey</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:titleTextColor">@color/primary_yellow</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>
</resources>